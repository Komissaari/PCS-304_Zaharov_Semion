<Window x:Class="Hometask_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hometask_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Удаление" HorizontalAlignment="Left" Height="40" Margin="30,270,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click_Del"/>
        <TextBox x:Name="TB" HorizontalAlignment="Left" Height="100" Margin="250,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Button  Content="Записать" HorizontalAlignment="Left" Height="40" Margin="30,0,0,0" VerticalAlignment="Center" Width="140" Click="Button_Click_Write"/>
        <Button Content="Чтение" HorizontalAlignment="Left" Height="40" Margin="600,0,0,0" VerticalAlignment="Center" Width="140" Click="Button_Click_Read"/>
        <Button Content="Редактирование" HorizontalAlignment="Left" Height="40" Margin="600,270,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click_Edit"/>
        <Button Content="Создание" HorizontalAlignment="Left" Height="40" Margin="360,240,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click_Create"/>
    </Grid>
</Window>
